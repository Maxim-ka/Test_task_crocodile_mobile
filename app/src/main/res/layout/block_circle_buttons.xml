<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center|center_vertical"
    android:gravity="center|center_vertical">

    <com.reschikov.crocodilemobile.testtask.ui.customview.CircleView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/circleVew"
        circle:cv_backgroundDrawable="@drawable/ic_replay"/>

    <com.reschikov.crocodilemobile.testtask.ui.customview.CircleView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        style="@style/circleVew"
        circle:cv_backgroundDrawable="@drawable/ic_close"/>

    <com.reschikov.crocodilemobile.testtask.ui.customview.CircleView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        style="@style/circleVew"
        circle:cv_backgroundDrawable="@drawable/ic_favorite"/>

    <com.reschikov.crocodilemobile.testtask.ui.customview.CircleView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/circleVew"
        circle:cv_backgroundDrawable="@drawable/ic_star"/>

</LinearLayout>